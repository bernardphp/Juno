{
    "@import": "%root_dir%/config/parameters.json",
    "routing.options" : {
        "cache_dir" : "%root_dir%/cache/routing"
    },

    "twig.options" : {
        "cache" : "%root_dir%/cache/twig"
    },

    "dbs.options" : {
        "bernard" : {
            "driver" : "%database_driver%",
            //"path" : "%root_dir%/cache/juno.sqlite"
            "dbname": "%database_name%",
            "host": "%database_hostname%", // localhost
            "user": "%database_username%", // root
            "password": "%database_password%",
            "charset": "database_charset",
            "port": "%database_port"
}
    }
}
